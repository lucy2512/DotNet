@model College_Space.Models.Event

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/ButtonStyle.css" asp-append-version="true" />

<h1 style="color:whitesmoke">Delete Event</h1>

<h3 style="color:whitesmoke">Are you sure you want to delete this?</h3>
<div style="color:whitesmoke">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EventName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EventOrganizer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventOrganizer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EventType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EventDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="EventId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <button class="btn btn-info"><a asp-action="Index">Back to List</a></button>
    </form>
</div>
